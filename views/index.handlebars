<div class="container">
    <div id="mainHeading">
        <img id="burgerIcon" src="/assets/images/burger-icon.png">
        <span class="display-1">eat da burger</span>
    </div>

    <h2>Burgers to eat!</h2>

    <ul>
    {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block}}
        {{/unless}}
    {{/each}}
    </ul>

    <h2>Burgers eaten!</h2>

    <ul>
    {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block}}
        {{/if}}
    {{/each}}
    </ul>

    <h2>Add a Burger:</h2>
    <form class="create-form">
        <div class="form-group row">
            <label for="ca" class="col-form-label">Burger Name:</label>
            <div class="col-4">
                <input type="text" class="form-control" id="ca" name="name">
            </div>
            <button class="btn btn-primary" type="submit">Add Burger</button>
        </div>
    </form>
</div>